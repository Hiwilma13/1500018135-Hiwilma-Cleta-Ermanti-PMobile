<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FF000000"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:id="@+id/ta"
        android:textSize="30sp"
        android:textColor="#FF00FF00"
        android:layout_marginStart="44dp"
        android:layout_alignTop="@+id/tb"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:id="@+id/tb"
        android:textSize="30sp"
        android:textColor="#FF00FF00"
        android:layout_marginStart="61dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ta"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:id="@+id/s1"
        android:textSize="60sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/ta"
        android:layout_toStartOf="@+id/tb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="52"
        android:id="@+id/s2"
        android:textSize="60sp"
        android:textColor="#FFFFFFFF"
        android:layout_alignTop="@+id/s1"
        android:layout_alignStart="@+id/tb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3THROWS"
        android:id="@+id/th3"
        android:textSize="15sp"
        android:background=	"#FFFF0000"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2THROWS"
        android:id="@+id/th2"
        android:textSize="15sp"
        android:layout_below="@+id/th3"
        android:background=	"#FFFF0000"
        android:layout_toStartOf="@+id/tb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1THROWS"
        android:id="@+id/th1"
        android:textSize="15sp"
        android:layout_below="@+id/th2"
        android:background=	"#FFFF0000"
        android:layout_toStartOf="@+id/tb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3THROWS"
        android:id="@+id/th6"
        android:textSize="15sp"
        android:layout_alignTop="@+id/th3"
        android:background=	"#FFFF0000"
        android:layout_alignStart="@+id/s2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2THROWS"
        android:id="@+id/th5"
        android:textSize="15sp"
        android:layout_above="@+id/th1"
        android:background=	"#FFFF0000"
        android:layout_alignStart="@+id/th6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1THROWS"
        android:id="@+id/th4"
        android:textSize="15sp"
        android:background=	"#FFFF0000"
        android:layout_alignTop="@+id/th1"
        android:layout_alignStart="@+id/th5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEMBALI"
        android:id="@+id/kem"
        android:background="#FF00FF00"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/th1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RISET"
        android:id="@+id/ris"
        android:textSize="15sp"
        android:background="#FF00FF00"
        android:layout_alignTop="@+id/kem"
        android:layout_alignEnd="@+id/th4" />

</RelativeLayout>
